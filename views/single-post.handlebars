{{> post-info post}}

{{#if loggedIn}}
<div class="card">
    <h3 class="card-header">Write a Comment</h3>
    <form class="card-body comment-form" id="comment-form">
        <input id="comment" name="comment-body" class="form-input" />
        <button type="submit" class="btn" id="write-comment">Submit</button>
    </form>
</div>
{{/if}}

<div class="card">
    <h3 class="card-header">Comment(s)</h3>
    {{> comments post.comments}}
</div>


{{#if loggedIn}}
<script src="/js/comment.js"></script>
{{/if}}